{
  "extends": "@tsconfig/svelte/tsconfig.json",
  "compilerOptions": {
    "rewriteRelativeImportExtensions": true,
    "noEmit": true,
    "allowJs": true,
    "checkJs": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "paths": {
      "$lib": ["./src"],
      "$lib/*": ["./src/*"]
    }
  }
}
